<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="@color/default_bg_color">	    

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >
        	        
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="150dip"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/complaint_suggestion_label"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />        
    </RelativeLayout> 		
	
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:padding="5dp">	
		
		<TextView
		    android:id="@+id/complaint_suggestion_content_text_view" 			    
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"	
			android:layout_margin="5dip"
			android:minWidth="100dip"			
			android:singleLine="true"
			android:gravity="left"
			android:text="@string/complaint_suggestion_content_label"  
			android:textAppearance="?android:attr/textAppearanceMedium"/>	
		
		<EditText 
		    android:id="@+id/content_edit_text"
			android:layout_height="wrap_content" 
			android:layout_width="match_parent"
			android:minHeight="100dip"
			android:inputType="text"			
			android:lines="5"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@drawable/input_selector"/>									
	</LinearLayout>	
	
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal"
		android:padding="5dp">	
		
		<TextView
		    android:id="@+id/mobile_text_view" 			    
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"	
			android:minWidth="100dip"			
			android:singleLine="true"
			android:gravity="left"
			android:text="@string/mobile_label"  
			android:textAppearance="?android:attr/textAppearanceMedium"/>
		
		<EditText 
		    android:id="@+id/mobile_edit_text"
			android:layout_height="wrap_content" 
			android:layout_width="0dip"
			android:inputType="phone"
			android:lines="1"
			android:layout_weight="1.0" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@drawable/input_selector"/>									
	</LinearLayout>		
	
	<LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal"
		android:padding="5dp">	
		
		<TextView
		    android:id="@+id/email_address_text_view" 			    
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"	
			android:minWidth="100dip"			
			android:singleLine="true"
			android:gravity="left"
			android:text="@string/email_address_label"  
			android:textAppearance="?android:attr/textAppearanceMedium"/>
		
		<EditText 
		    android:id="@+id/email_address_edit_text"
			android:layout_height="wrap_content" 
			android:layout_width="0dip"
			android:inputType="textEmailAddress"
			android:lines="1"
			android:layout_weight="1.0" 
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:background="@drawable/input_selector"/>									
	</LinearLayout>		
	
    <Button 
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dip"
        android:text="@string/submit_label"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_grey_selector"
        android:enabled="false"/>		
</LinearLayout>	