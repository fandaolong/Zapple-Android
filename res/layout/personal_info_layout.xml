<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="@color/default_bg_color">	    

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >
        	        
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="150dip"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/personal_info_label"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />        
    </RelativeLayout> 
    
	<ScrollView
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_margin="3dip">	
		
		<TableLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		
		    <TableRow
		        android:layout_margin="3dip">
		        
				<TextView 			 
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/name_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>	
					
				<TextView 			
				    android:id="@+id/name_text_view"    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="left"
					android:text="@string/name_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>					
			</TableRow>
			
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>
		    
		    <TableRow
		        android:layout_margin="3dip">
				
				<TextView			    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/member_rank_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>
				
				<TextView
				    android:id="@+id/member_rank_text_view" 			    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="left"
					android:text="@string/member_rank_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>						
			</TableRow>

		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>		    
		    			
			<TableRow
			    android:layout_margin="3dip">
				
				<TextView 			    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/id_type_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>
							    
				<TextView
				    android:id="@+id/id_type_text_view" 			    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="left"
					android:text="@string/id_type_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>	
			</TableRow>
			
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>			
			
			<TableRow
			    android:layout_margin="3dip">
				
				<TextView		    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/id_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>
				
				<TextView
				    android:id="@+id/id_text_view" 			    
					android:layout_width="match_parent" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="left"
					android:text="@string/id_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>							
			</TableRow>
			
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>			
			
			<TableRow
			    android:layout_margin="3dip">		
			    		
				<TextView
				    android:id="@+id/mobile_text_view" 			    
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/mobile_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>	
				
				<EditText 
				    android:id="@+id/mobile_edit_text"
					android:layout_height="wrap_content" 
					android:layout_width="0dip"
					android:inputType="phone"
					android:lines="1"
					android:layout_weight="1.0" 
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:visibility="visible"
					android:background="@drawable/input_selector"/>									
			</TableRow>	
			
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>			
			
			<TableRow
			    android:layout_margin="3dip">		
			    		
				<TextView
				    android:id="@+id/email_address_text_view" 			    
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/email_address_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>
				
				<EditText 
				    android:id="@+id/email_address_edit_text"
					android:layout_height="wrap_content" 
					android:layout_width="0dip"
					android:inputType="textEmailAddress"
					android:lines="1"
					android:layout_weight="1.0" 
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:visibility="visible"
					android:background="@drawable/input_selector"/>									
			</TableRow>		
			
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>			
			
			<TableRow
			    android:layout_margin="3dip">	
			    			
				<TextView
				    android:id="@+id/verify_password_text_view" 			    
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"	
					android:minWidth="100dip"			
					android:singleLine="true"
					android:gravity="right"
					android:text="@string/verify_password_label"  
					android:textAppearance="?android:attr/textAppearanceMedium"/>
				
				<EditText 
				    android:id="@+id/verify_password_edit_text"
					android:layout_height="wrap_content" 
					android:layout_width="0dip"
					android:inputType="textPassword"
					android:lines="1"
					android:layout_weight="1.0" 
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:visibility="visible"
					android:background="@drawable/input_selector"/>									
			</TableRow>	
			
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:layout_margin="3dip"
		        android:background="@drawable/list_divider_holo_light"/>				
		</TableLayout>
	</ScrollView>
	
    <Button 
        android:id="@+id/modify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_gravity="center_horizontal"
        android:text="@string/modify_label"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_grey_selector"/>		
</LinearLayout>	